{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/hooks/gate-check.sh\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/hooks/validate-edit.sh\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [],
    "SessionStart": [
      {
        "type": "command",
        "command": "bash \"$CLAUDE_PROJECT_DIR/hooks/session-context.sh\"",
        "timeout": 5
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "bash \"$CLAUDE_PROJECT_DIR/hooks/session-end.sh\"",
        "timeout": 10
      }
    ]
  }
}
